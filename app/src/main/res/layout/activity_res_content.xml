                                android:text="Females have a greater body depth"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/table_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="1"
                        android:visibility="visible">

                        <TableRow android:layout_width="wrap_content">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="Pethiya cumingii"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="italic" />

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="Pethiya reval"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="italic" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="Body size: Told (Vertebrae11+15)"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="Body size: Small (Vertebrae11+13)"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="Dorsal, anal, pelvic fins are yellow"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="Dorsal, anal, pelvic fins are red"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/table_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"
                        android:visibility="visible">

                        <TableRow android:layout_width="wrap_content">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="Devario pathirana"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="italic" />

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="Devario malabaricus"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="italic" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="P stripe restricted to caudal peduncle"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="P stripe originate with origin of pelvic fins"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="P+1 and P-1 stripes absent"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:padding="3dip"
                                android:text="P+1 and P-1 stripes proceeding anterior to the pelvic-fin origin"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:alpha="0.6"
            android:background="@color/vpi__background_holo_dark"
            android:gravity="center"
            android:orientation="vertical">

            <!---add your views here-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <!---add your views here-->
            <ImageView
                android:id="@+id/popup_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pro_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:clickable="true"
            android:src="@android:drawable/btn_dialog" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>